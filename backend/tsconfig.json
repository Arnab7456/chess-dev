{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist", // This specifies where the compiled files go
    "rootDir": "./src", // The root directory for the TypeScript files
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"], // Make sure to include the correct files
  "exclude": ["node_modules"]
}
